@import './variables'

// fonts
fontRegular()
  font-family 'Montserrat', Helvetica, sans-serif
  font-weight normal
  font-style normal

fontSemiBold()
  font-family 'Montserrat', Helvetica, sans-serif
  font-weight 600
  font-style normal

fontBold()
  font-family 'Montserrat', Helvetica, sans-serif
  font-weight 700
  font-style normal

// other mixins
debug()
  background-color rgba(red, .33) !important

outlineDebug()
  outline 3px solid rgba(red, .33) !important

hover()
  &:hover
    html.desktop &
      {block}

flexCenter()
  display flex
  justify-content center
  align-items center
